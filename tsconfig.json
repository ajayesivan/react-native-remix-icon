{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples", "src-old"]
}
